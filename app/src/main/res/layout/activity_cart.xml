<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_pink"
    tools:context=".CartActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="start">

            <TextView
                android:id="@+id/title"
                android:text="Giỏ hàng của bạn"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"/>

            <!-- ITEM 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#f0f0f0"
                android:layout_marginBottom="8dp"
                android:id="@+id/item_1_container">

                <ImageView
                    android:id="@+id/item_image_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/minhchi3"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/item_name_1"
                    android:text="Tên sản phẩm A"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_price_1"
                    android:text="Giá: 200.000đ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_quantity_1"
                    android:text="Số lượng: 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Nút Thanh toán và Xóa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_checkout_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thanh toán"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_delete_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Xóa"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- ITEM 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#f0f0f0"
                android:layout_marginBottom="8dp"
                android:gravity="start">

                <ImageView
                    android:id="@+id/item_image_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/minhchi4"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/item_name_2"
                    android:text="Tên sản phẩm B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_price_2"
                    android:text="Giá: 200.000đ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_quantity_2"
                    android:text="Số lượng: 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:text="Giỏ hàng của bạn"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"/>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quay lại"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>